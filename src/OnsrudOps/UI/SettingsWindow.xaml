<Window x:Class="OnsrudOps.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnsrudOps"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="500" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Topmost="True" FontSize="11" Icon="/UI/resources/icon.ico">

    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>

        <TabControl>

            <TabItem Header="General"
                     Cursor="Hand"
                     Foreground="{StaticResource Accent1Brush}">
                <StackPanel Orientation="Vertical">
                    <GroupBox Header="Path to EdytorNC" BorderBrush="{StaticResource Accent1Brush}" HorizontalAlignment="Stretch"
                          VerticalAlignment="Top" VerticalContentAlignment="Stretch">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Label Name="EdytorNCPath_Lbl" Foreground="{StaticResource Accent1Brush}"/>
                                <Button Name="ChangeEdytorNCPath_Btn" Content="Change Path" Click="ChangeEdytorNCPath_Btn_Click" Margin="0,5,0,5"/>
                            </StackPanel>
                        </GroupBox>
                    <GroupBox Header="Path to Syntax Definition" BorderBrush="{StaticResource Accent1Brush}" HorizontalAlignment="Stretch"
                                VerticalAlignment="Top" VerticalContentAlignment="Stretch">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Label Name="SyntaxPathLabel" Foreground="{StaticResource Accent1Brush}"/>
                            <Button Name="ChangeSyntaxFilePath_Btn" Content="Change Path" Click="ChangeSyntaxFilePath_Btn_Click" Margin="0,5,0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

            </TabItem>
            <TabItem Header="Serial Settings"
                     Cursor="Hand"
                     Foreground="{StaticResource Accent1Brush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical">
                        <GroupBox Header="Port Name"
                                  Margin="5,5,5,5">
                            <TextBox x:Name="PortNameTextBox"
                                     Width="120"
                                     TextChanged="PortNameTextBox_TextChanged"/>
                        </GroupBox>
                        <GroupBox Header="Baud Rate"
                                  Margin="5,5,5,5">
                            <ComboBox Name="BaudRateComboBox"
                                      SelectionChanged="BaudRateComboBox_SelectionChanged">
                                <ComboBoxItem Content="110" Tag="110"/>
                                <ComboBoxItem Content="300" Tag="300"/>
                                <ComboBoxItem Content="600" Tag="600"/>
                                <ComboBoxItem Content="1200" Tag="1200"/>
                                <ComboBoxItem Content="2400" Tag="2400"/>
                                <ComboBoxItem Content="4800" Tag="4800"/>
                                <ComboBoxItem Content="9600" Tag="9600"/>
                                <ComboBoxItem Content="14400" Tag="14400"/>
                                <ComboBoxItem Content="19200" Tag="19200"/>
                                <ComboBoxItem Content="38400" Tag="38400"/>
                                <ComboBoxItem Content="57600" Tag="57600"/>
                                <ComboBoxItem Content="115200" Tag="115200"/>
                                <ComboBoxItem Content="128000" Tag="128000"/>
                                <ComboBoxItem Content="256000" Tag="256000"/>
                            </ComboBox>
                        </GroupBox>
                        <GroupBox Header="Data Bits"
                                  Margin="5,5,5,5">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Name="DataBits7RadioButton" 
                                             Content="7"
                                             GroupName="DataBits"
                                             Tag="7"
                                             Checked="DataBitsRadioButton_Checked"
                                             Unchecked="DataBitsRadioButton_Checked"/>
                                <RadioButton Name="DataBits8RadioButton"
                                             Content="8"
                                             GroupName="DataBits"
                                             Tag="8"
                                             Checked="DataBitsRadioButton_Checked"
                                             Unchecked="DataBitsRadioButton_Checked"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                Grid.Column="1">
                        <GroupBox Header="Stop Bits"
                                  Margin="5,5,5,5">
                            <StackPanel Orientation="Vertical">
                                <RadioButton x:Name="StopBitsNoneRadioButton"
                                             Content="None"
                                             Tag="0"
                                             GroupName="StopBits"
                                             Checked="StopBitsRadioButton_Checked"
                                             Unchecked="StopBitsRadioButton_Checked"/>
                                <RadioButton x:Name="StopBitsOneRadioButton"
                                             Content="One"
                                             Tag="1"
                                             GroupName="StopBits"
                                             Checked="StopBitsRadioButton_Checked"
                                             Unchecked="StopBitsRadioButton_Checked"/>
                                <RadioButton x:Name="StopBitsTwoRadioButton"
                                             Content="Two"
                                             Tag="2"
                                             GroupName="StopBits"
                                             Checked="StopBitsRadioButton_Checked"
                                             Unchecked="StopBitsRadioButton_Checked"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Parity"
                                  Margin="5,5,5,5">
                            <StackPanel Orientation="Vertical">
                                <RadioButton Name="ParityNoneRadioButton"
                                             Content="None"
                                             GroupName="Parity"
                                             Tag="0"
                                             Checked="ParityRadioButton_Checked"
                                             Unchecked="ParityRadioButton_Checked"/>
                                <RadioButton Name="ParityOddRadioButton"
                                             Content="Odd"
                                             GroupName="Parity"
                                             Tag="1"
                                             Checked="ParityRadioButton_Checked"
                                             Unchecked="ParityRadioButton_Checked"/>
                                <RadioButton Name="ParityEvenRadioButton"
                                             Content="Even"
                                             GroupName="Parity"
                                             Tag="2"
                                             Checked="ParityRadioButton_Checked"
                                             Unchecked="ParityRadioButton_Checked"/>
                            </StackPanel>
                        </GroupBox>
                        <Button x:Name="TryConnectButton"
                                Content="Try Connect"
                                Width="200"
                                Background="{StaticResource Accent1Brush}"
                                Margin="5,5,5,5"
                                HorizontalAlignment="Center"
                                Click="TryConnectButton_Click"/>
                        <Label Name="TestConnectionLabel" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
            </TabItem>
        </TabControl>

        <Button Name="Close_Btn" Content="Close" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Close_Btn_Click"
                Background="{StaticResource Accent1Brush}" Grid.Row="1"/>
    </Grid>
</Window>
